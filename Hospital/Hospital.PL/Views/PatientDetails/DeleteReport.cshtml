@model Doctorwritetestreport

@{
    ViewBag.Title = "Delete Report";
}


<section class="py-3">
    <section class="py-3">
        <div class="container">
            <div class="row">
                <div class="col-12 py-3">
                    <h4 class="text-center">Delete Report</h4>
                </div>
            </div>
        </div>
    </section>
</section>

<h3>Are you sure you want to delete this?</h3>
<div>

    <form asp-action="DeleteReport" asp-route-doctorId="@Model.Docid" asp-route-patientId="@Model.Patid" class="form mt-2">


        <div class="form-group mt-2">
            <label asp-for="Docid" class="control-label col-md-2">Doctor Id</label>
            <div class="col-md-12">
                <input asp-for="Docid" class="form-control" readonly />
            </div>
        </div>

        <div class="form-group mt-2">
            <label asp-for="Patid" class="control-label col-md-2">Patient Id</label>
            <div class="col-md-12">
                <input asp-for="Patid" class="form-control" readonly />
            </div>
        </div>


        <div class="form-group mt-2">
            <label asp-for="Diagnosis" class="control-label col-md-2"></label>
            <div class="col-md-12">
                <input asp-for="Diagnosis" class="form-control" readonly />
            </div>
        </div>

        <div class="form-group mt-2">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" value="Delete" class="btn btn-danger" />|
                <a asp-action="Index" class="btn btn-dark">Back to List</a>
            </div>
        </div>
    </form>
</div>

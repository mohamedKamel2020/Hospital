@model Medicalrecord

@{
    ViewBag.Title = "Delete Record";
}

<section class="py-3">
    <section class="py-3">
        <div class="container">
            <div class="row">
                <div class="col-12 py-3">
                    <h4 class="text-center">Delete Record</h4>
                </div>
            </div>
        </div>
    </section>
</section>

<form asp-action="DeleteRecord" asp-route-id="@Model.Recordid" class="mt-3">

    <div class="form-group mt-2">
        <label class="form-label" asp-for="Recordid">Record Id</label>
        <input class="form-control" asp-for="Recordid" readonly />
    </div>

    <div class="form-group mt-2">
        <label class="form-label" asp-for="Diagnosis"></label>
        <input class="form-control" asp-for="Diagnosis" readonly />
    </div>
    <div class="form-group mt-2">
        <label asp-for="Patid" class="control-label col-md-2">Patient</label>
        <input class="form-control" asp-for="@Model.Pat.Patientname" readonly />

    </div>

    <div class="mt-2">
        <input type="submit" value="Delete" class="btn btn-danger" />|
        <a asp-action="Index" class="btn btn-info">Back to list</a>
    </div>
</form>
@model Medicalrecord

@{
    ViewBag.Title = "Add Record";
}

<section class="py-3">
    <section class="py-3">
        <div class="container">
            <div class="row">
                <div class="col-12 py-3">
                    <h4 class="text-center">Add New Record</h4>
                </div>
            </div>
        </div>
    </section>
</section>


<form asp-action="AddRecord" class="mt-3">

    <div class="form-group mt-2">
        <label class="form-label" asp-for="Recordid">Record Id</label>
        <input class="form-control" asp-for="Recordid" />
    </div>

    <div class="form-group mt-2">
        <label asp-for="Patid" class="control-label col-md-2">Patient</label>
        <div class="col-md-10">
            <select asp-for="Patid" class="form-control" asp-items="ViewBag.Patients"></select>
        </div>
    </div>

    <div class="form-group mt-2">
        <label class="form-label" asp-for="Diagnosis">Diagnosis</label>
        <input class="form-control" asp-for="Diagnosis" />
    </div>


    <div class="form-group mt-2">
        <label class="form-label" asp-for="Recorddate">Date</label>
        <input class="form-control" type="date" asp-for="Recorddate" />
    </div>

    <div class="mt-2">
        <input type="submit" value="Save" class="btn btn-primary" />|
        <a asp-action="Index" class="btn btn-info">Back to list</a>

    </div>
</form>
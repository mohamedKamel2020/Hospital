@model Testreporttreatment

@{
    ViewBag.Title = "Add Treatment";
}

<section class="py-3">
    <section class="py-3">
        <div class="container">
            <div class="row">
                <div class="col-12 py-3">
                    <h4 class="text-center">Add New Treatment</h4>
                </div>
            </div>
        </div>
    </section>
</section>


<form asp-action="AddTreatment" class="mt-3">

     <div class="form-group mt-2">
         <label asp-for="Docid" class="control-label col-md-2">Doctors</label>
         <div class="col-md-10">
             <select asp-for="Docid" class="form-control" asp-items="ViewBag.Doctors"></select>
         </div>
     </div>

     <div class="form-group mt-2">
         <label asp-for="Patid" class="control-label col-md-2">Patient</label>
         <div class="col-md-10">
             <select asp-for="Patid" class="form-control" asp-items="ViewBag.Patients"></select>
         </div>
     </div>
  
    <div class="form-group mt-2">
        <label class="form-label" asp-for="Treatments"></label>
        <input class="form-control" asp-for="Treatments" />
    </div>

    <div class="mt-2">
        <input type="submit" value="Save" class="btn btn-primary" />|
        <a asp-action="Index" class="btn btn-info">Back to list</a>

    </div>
</form>
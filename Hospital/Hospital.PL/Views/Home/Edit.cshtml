@model Patient
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit information @Model.Patientname </h1>
<br />
<br />
<form asp-action="Edit" asp-route-id="@Model.Patientid"  class="mt-3">
    <div class="form-group mt-2">
        <label class="form-label" asp-for="Patientid">Patient Id</label>
        <input class="form-control" asp-for="Patientid" />
    </div>
    <div class="form-group mt-2">
        <label class="form-label" asp-for="Patientname">Patient Name</label>
        <input class="form-control" asp-for="Patientname" />
        <span asp-validation-for="Patientname"></span>
    </div>
    <div class="form-group mt-2">
        <label class="form-label" asp-for="Phone"></label>
        <input class="form-control" asp-for="Phone" />
    </div>
    <div class="form-group mt-2">
        <label class="form-label" asp-for="Age"></label>
        <input class="form-control" asp-for="Age" />
    </div>
    <div class="form-group mt-2">
        <label class="form-label" asp-for="City"></label>
        <input class="form-control" asp-for="City" />
    </div>
    <div class="form-group mt-2">
        <label class="form-label" asp-for="Street"></label>
        <input class="form-control" asp-for="Street" />
    </div>
    <div class="form-group mt-2">
        <label class="form-label" asp-for="Apartmentblockno"></label>
        <input class="form-control" asp-for="Apartmentblockno" />
    </div>
    <div class="form-group mt-2">
        <label asp-for="Sex" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input type="radio" asp-for="Sex" value="M" /> Male
            <input type="radio" asp-for="Sex" value="F" /> Female
        </div>
    </div>
    <div class="form-group mt-2">
        <label class="form-label" asp-for="Enterdate"></label>
        <input class="form-control" type="date" asp-for="Enterdate" />
    </div>
    <div class="form-group mt-2">
        <label class="form-label" asp-for="Exitdate"></label>
        <input class="form-control" type="date" asp-for="Exitdate" />
    </div>
    <div class="form-group mt-2 mb-2">
        <label class="form-label" asp-for="Wardid"></label>
        <input class="form-control" asp-for="Wardid" />
    </div>
    <input type="submit" value="Save" class="btn btn-primary" />|
    <a asp-action="Index" class="btn btn-info">Back to list</a>
</form>


@model IEnumerable<Patient>

@{
    ViewData["Title"] = "Home Page";
}

<section class="py-5">

    <section class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-12 py-3">
                    <h1 class="text-center">OUR PATIENTS</h1>
                </div>
            </div>
        </div>
    </section>

</section>
<br />
<div class="m-3">
    <a asp-action="Add" class="btn btn-primary mb-2">Add new Patient </a>
    <br />
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(P=>P.Patientname)</th>
                    <th>@Html.DisplayNameFor(P => P.Phone)</th>
                    <th>@Html.DisplayNameFor(P => P.Age)</th>
                    <th>@Html.DisplayNameFor(P => P.City)</th>
                    <th>@Html.DisplayNameFor(P => P.Street)</th>
                    <th>block #</th>
                    <th>@Html.DisplayNameFor(P => P.Enterdate)</th>
                    <th>@Html.DisplayNameFor(P => P.Sex)</th>
                    <th>Department</th>
                    <th>Details</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var patient in Model)
                {
                    <tr>
                        <td>@patient.Patientname</td>
                        <td>@patient.Phone</td>
                        <td>@patient.Age</td>
                        <td>@patient.City</td>
                        <td>@patient.Street</td>
                        <td>@patient.Apartmentblockno</td>
                        <td>@patient.Enterdate</td>
                        <td>@patient.Sex</td>
                        <td>@patient.Ward.DepatmentnoNavigation.Departmentname</td>
                        <td>
                            <a asp-controller="Home" asp-action="Details" asp-route-id="@patient.Patientid" class="btn btn-warning">
                                <i class="fas fa-eye"></i>Details
                            </a>
                        </td>
                        <td>
                            <a asp-controller="Home" asp-action="Edit" asp-route-id="@patient.Patientid" class="btn btn-success">
                                <i class="fas fa-edit"></i>Edit
                            </a>
                        </td>
                        <td>
                            <a asp-controller="Home" asp-action="Delete" asp-route-id="@patient.Patientid" class="btn btn-danger">
                                <i class="fas fa-trash"></i>Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="mt-5 alert alert-warning">
            <h3>There is no Patients</h3>
        </div>
    }
</div>

@model Patient
@{
    ViewData["Title"] = "Delete";
}

<h1>Are You Sure To Delete This Patient ?</h1>


<form asp-action="Delete" asp-route-id="@Model.Patientid" class="mt-3">
    <div class="form-group">
        <label class="col-form-label" asp-for="Patientid">Patient Id</label>
        <input class="form-control" asp-for="Patientid" readonly />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Patientname">Patient Name</label>
        <input class="form-control" asp-for="Patientname" readonly />
    </div>

    <div class="form-group mt-2">
        <label class="form-label" asp-for="Phone"></label>
        <input class="form-control" asp-for="Phone" readonly />
    </div>

    <div class="form-group mt-2 mb-2">
        <label class="form-label" asp-for="@Model.Ward.DepatmentnoNavigation.Departmentname">Department Name</label>
        <input class="form-control" asp-for="@Model.Ward.DepatmentnoNavigation.Departmentname" readonly />
    </div>

    <input type="submit" value="Delete" class="btn btn-danger" />|
    <a asp-action="Index" class="btn btn-info">Back to list</a>
</form>

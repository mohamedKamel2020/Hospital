@model Patient;
@{
    ViewData["Title"] = "Details";
}

<h1>Patient Details</h1>


<div class="form-group">
    <label class="col-form-label" asp-for="Patientname">Patient Name</label>
    <input class="form-control" asp-for="Patientname" readonly />
</div>

<div class="form-group mt-2">
    <label class="form-label" asp-for="Patientid">Patient Id</label>
    <input class="form-control" asp-for="Patientid" readonly />
</div>

<div class="form-group mt-2">
    <label class="form-label" asp-for="Phone"></label>
    <input class="form-control" asp-for="Phone" readonly />
</div>
<div class="form-group mt-2">
    <label class="form-label" asp-for="Age"></label>
    <input class="form-control" asp-for="Age" readonly />
</div>
<div class="form-group mt-2">
    <label class="form-label" asp-for="City"></label>
    <input class="form-control" asp-for="City" readonly />
</div>
<div class="form-group mt-2">
    <label class="form-label" asp-for="Street"></label>
    <input class="form-control" asp-for="Street" readonly />
</div>
<div class="form-group mt-2">
    <label class="form-label" asp-for="Apartmentblockno"></label>
    <input class="form-control" asp-for="Apartmentblockno" readonly />
</div>

<div class="form-group mt-2">
    <label class="form-label" asp-for="Enterdate"></label>
    <input class="form-control" type="date" asp-for="Enterdate" readonly />
</div>
<div class="form-group mt-2">
    <label class="form-label" asp-for="Exitdate"></label>
    <input class="form-control" type="date" asp-for="Exitdate" readonly />
</div>
<div class="form-group mt-2">
    <label class="form-label" asp-for="Wardid"></label>
    <input class="form-control" asp-for="Wardid" readonly />
</div>
<div class="form-group mt-2">
    <label class="form-label" asp-for="@Model.Ward.DepatmentnoNavigation.Departmentname">Department Name</label>
    <input class="form-control" asp-for="@Model.Ward.DepatmentnoNavigation.Departmentname" readonly />
</div>
<div class="row mt-2">
    <a asp-action="Index" class="btn btn-dark">Back to List</a>
</div>
@model Depatment

@{
    ViewData["Title"] = "Details";
}

<section class="py-3">
    <section class="py-3">
        <div class="container">
            <div class="row">
                <div class="col-12 py-3">
                    <h2 class="text-center">@Model.Departmentname.ToUpper() DEPARTMENT</h2>
                </div>
            </div>
        </div>
    </section>
</section>


<section class="section-padding" id="about">
    <div class="container">
        <div class="row">

            <div class="col-lg-6 col-md-6 col-12">
                <h2 class="mb-lg-3 mb-3">@Model.Departmentname</h2>

                <p>Protect yourself and others by wearing masks and washing hands frequently. Outdoor is safer than indoor for gatherings or holding events. People who get sick with Coronavirus disease (COVID-19) will experience mild to moderate symptoms and recover without special treatments.</p>

            </div>

            <div class="col-lg-4 col-md-5 col-12 mx-auto">
                <div class="d-flex justify-content-center align-items-center">
                    @if (!string.IsNullOrEmpty(Model.fileicon))
                    {
                        <img src="~/images/departments/@Model.fileicon" alt="Department Image" style="max-width:200px" />
                    }
                </div>
            </div>

        </div>
    </div>
</section>



<section class="py-3">
    <section class="py-3">
        <div class="container">
            <div class="row">
                <div class="col-12 py-3">
                    <h2 class="text-center">@Model.Departmentname.ToUpper() WARDS</h2>
                </div>
            </div>
        </div>
    </section>
</section>


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Ward Number</th>
            <th>Capacity</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ward in Model.Wards)
        {
            <tr>
                <td>@ward.Wardid</td>
                <td>@ward.Capacity</td>
                <td>
                    <a asp-controller="Ward" asp-action="Details" asp-route-id="@ward.Wardid" class="btn btn-warning">
                        <i class="fas fa-eye"></i>Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="row mt-2">
    <a asp-action="Index" class="btn btn-info mt-2"> Back to List  </a>
</div>


@model IEnumerable<Depatment>

@{
    ViewData["Title"] = "Home Page";
}
<section class="hero" id="hero">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div id="myCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/images/slider/young-asian-female-dentist-white-coat-posing-clinic-equipment.jpg" class="img-fluid" alt="">
                        </div>

                        <div class="carousel-item">
                            <img src="~/images/slider/portrait-successful-mid-adult-doctor-with-crossed-arms.jpg" class="img-fluid" alt="">
                        </div>

                        <div class="carousel-item">
                            <img src="~/images/slider/doctor-s-hand-holding-stethoscope-closeup.jpg" class="img-fluid" alt="">
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<section class="py-3">
    <section class="py-3">
        <div class="container">
            <div class="row">
                <div class="col-12 py-3">
                    <h1 class="text-center">OUR DEPARTMENTS</h1>
                </div>
            </div>
        </div>
    </section>
</section>
<div class="row mt-2">
    <a asp-action="Create" class="btn btn-primary mb-2">Add new Department </a>
</div>
<div class="row mt-3">
@foreach (var department in Model)
{
    <div class="col-md-3 text-center">
        <div class="card mb-4 shadow-sm">
            <img src="~/images/departments/@department.fileicon" class="card-img-top" alt="@department.Departmentname Icon" style="max-width: 100px; margin: auto; padding-top: 10px;">
            <div class="card-body">
                    <a asp-controller="Department" asp-action="Details" asp-route-id="@department.Departmentid" class="card-title font-weight-bold">
                    @department.Departmentname
                </a>
            </div>
        </div>
    </div>
}
</div>


@model Accountant

@{
    ViewBag.Title = "Delete Accountant";
}


<section class="py-3">
    <section class="py-3">
        <div class="container">
            <div class="row">
                <div class="col-12 py-3">
                    <h4 class="text-center">Delete Accountant: @Model.Accountantname</h4>
                </div>
            </div>
        </div>
    </section>
</section>

<h3>Are you sure you want to delete @Model.Accountantname ?</h3>
<div>

    <form asp-action="DeleteAccountant" asp-route-id="@Model.Accountantid" class="form mt-2">

        <div class="form-group mt-2">
            <label asp-for="Accountantid" class="control-label col-md-2">Accountant Id</label>
            <div class="col-md-10">
                <input asp-for="Accountantid" class="form-control" readonly />
            </div>
        </div>

        <div class="form-group mt-2">
            <label asp-for="Accountantname" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Accountantname" class="form-control" readonly />
            </div>
        </div>
       
        <div class="form-group mt-2">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" value="Delete" class="btn btn-danger" />|
                <a asp-action="Index" class="btn btn-dark">Back to List</a>
            </div>
        </div>
    </form>
</div>

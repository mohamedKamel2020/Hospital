@model Accountant

@{
    ViewBag.Title = "Edit Accountant";
}
<section class="py-3">
    <section class="py-3">
        <div class="container">
            <div class="row">
                <div class="col-12 py-3">
                    <h4 class="text-center">Edit Accountant: @Model.Accountantname</h4>
                </div>
            </div>
        </div>
    </section>
</section>


<form asp-action="EditAccountant" asp-route-id="@Model.Accountantid" class="mt-3">
    <div class="form-group mt-2">
        <label class="form-label" asp-for="Accountantid">Accountant Id</label>
        <input class="form-control" asp-for="Accountantid" readonly/>
    </div>
    <div class="form-group mt-2">
        <label class="form-label" asp-for="Accountantname">Accountant Name</label>
        <input class="form-control" asp-for="Accountantname" />
        <span asp-validation-for="Accountantname"></span>
    </div>

    <div class="form-group mt-2">
        <label class="form-label" asp-for="Phone"></label>
        <input class="form-control" asp-for="Phone" />
    </div>
    <div class="form-group mt-2">
        <label class="form-label" asp-for="Age"></label>
        <input class="form-control" asp-for="Age" />
    </div>
    <div class="form-group mt-2">
        <label class="form-label" asp-for="City"></label>
        <input class="form-control" asp-for="City" />
    </div>
    <div class="form-group mt-2">
        <label class="form-label" asp-for="Street"></label>
        <input class="form-control" asp-for="Street" />
    </div>
    <div class="form-group mt-2">
        <label class="form-label" asp-for="ApartmentBlockNo"></label>
        <input class="form-control" asp-for="ApartmentBlockNo" />
    </div>
    <div class="form-group mt-2">
        <label asp-for="Sex" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input type="radio" asp-for="Sex" value="M" /> Male
            <input type="radio" asp-for="Sex" value="F" /> Female
        </div>
    </div>
    <div class="form-group mt-2">
        <label class="form-label" asp-for="Salary"></label>
        <input class="form-control" asp-for="Salary" />
    </div>
    <div class="form-group mt-2">
        <label class="form-label" asp-for="Shift"></label>
        <input class="form-control" asp-for="Shift" />
    </div>

    <div class="mt-2">
        <input type="submit" value="Save" class="btn btn-primary" />|
        <a asp-action="Index" class="btn btn-info">Back to list</a>
    </div>
</form>
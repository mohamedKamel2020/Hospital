@model Nurse

@{
    ViewBag.Title = "Edit Nurse";
}
<section class="py-3">
    <section class="py-3">
        <div class="container">
            <div class="row">
                <div class="col-12 py-3">
                    <h4 class="text-center">Edit Nurse: @Model.Nursename</h4>
                </div>
            </div>
        </div>
    </section>
</section>


<form asp-action="EditNurse" asp-route-id="@Model.Nurseid" class="mt-3">
    <div class="form-group mt-2">
        <label class="form-label" asp-for="Nurseid">Nurse Id</label>
        <input class="form-control" asp-for="Nurseid" readonly/>
    </div>
    <div class="form-group mt-2">
        <label class="form-label" asp-for="Nursename">Nurse Name</label>
        <input class="form-control" asp-for="Nursename" />
        <span asp-validation-for="Nursename"></span>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Phone Numbers</label>
        <div class="col-md-10">
            <div id="phoneNumbers">
                @for (int i = 0; i < Model.Phone?.Count; i++)
                {
                    <div class="input-group mb-2">
                        <input type="text" name="Phone[@i]" value="@Model.Phone[i]" class="form-control" />
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="form-group mt-2">
        <label class="form-label" asp-for="Age"></label>
        <input class="form-control" asp-for="Age" />
    </div>
    <div class="form-group mt-2">
        <label class="form-label" asp-for="City"></label>
        <input class="form-control" asp-for="City" />
    </div>
    <div class="form-group mt-2">
        <label class="form-label" asp-for="Street"></label>
        <input class="form-control" asp-for="Street" />
    </div>
    <div class="form-group mt-2">
        <label class="form-label" asp-for="Apartmentblockno"></label>
        <input class="form-control" asp-for="Apartmentblockno" />
    </div>
    <div class="form-group mt-2">
        <label asp-for="Sex" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input type="radio" asp-for="Sex" value="M" /> Male
            <input type="radio" asp-for="Sex" value="F" /> Female
        </div>
    </div>
    <div class="form-group mt-2">
        <label class="form-label" asp-for="Salary"></label>
        <input class="form-control" asp-for="Salary" />
    </div>
    <div class="form-group mt-2">
        <label class="form-label" asp-for="Shift"></label>
        <input class="form-control" asp-for="Shift" />
    </div>

    <div class="form-group mt-2">
        <label asp-for="Wardid" class="control-label col-md-2">Ward Number</label>
        <input class="form-control" asp-for="Wardid" />
    </div>
    <div class="form-group mt-2">
        <label asp-for="SupervisorId" class="control-label col-md-2">Supervisor</label>
        <input class="form-control" asp-for="SupervisorId" />
    </div>
    <input type="submit" value="Save" class="btn btn-primary" />|
    <a asp-action="Index" class="btn btn-info">Back to list</a>
</form>
@model Doctor

@{
    ViewBag.Title = "Edit Doctor";
}
<section class="py-3">
    <section class="py-3">
        <div class="container">
            <div class="row">
                <div class="col-12 py-3">
                    <h4 class="text-center">Edit Doctor: @Model.Doctorname</h4>
                </div>
            </div>
        </div>
    </section>
</section>


<form asp-action="EditDoctor" asp-route-id="@Model.Doctorid" class="mt-3">
    <div class="form-group mt-2">
        <label class="form-label" asp-for="Doctorid">Doctor Id</label>
        <input class="form-control" asp-for="Doctorid" readonly/>
    </div>
    <div class="form-group mt-2">
        <label class="form-label" asp-for="Doctorname">Doctor Name</label>
        <input class="form-control" asp-for="Doctorname" />
        <span asp-validation-for="Doctorname"></span>
    </div>
    <div class="form-group"> 
        <label class="control-label col-md-2">Phone Numbers</label> 
        <div class="col-md-10"> 
            <div id="phoneNumbers"> 
                @for (int i = 0; i < Model.Phone?.Count; i++)
                {
                    <div class="input-group mb-2"> 
                        <input type="text" name="Phone[@i]" value="@Model.Phone[i]" class="form-control" />    
                    </div>
                } 
            </div>  
        </div> 
    </div>
    <div class="form-group mt-2">
        <label class="form-label" asp-for="MedicalSpecialization">Specialization</label>
        <input class="form-control" asp-for="MedicalSpecialization" />
    </div>
    <div class="form-group mt-2">
        <label class="form-label" asp-for="Age"></label>
        <input class="form-control" asp-for="Age" />
    </div>
    <div class="form-group mt-2">
        <label class="form-label" asp-for="City"></label>
        <input class="form-control" asp-for="City" />
    </div>
    <div class="form-group mt-2">
        <label class="form-label" asp-for="Street"></label>
        <input class="form-control" asp-for="Street" />
    </div>
    <div class="form-group mt-2">
        <label class="form-label" asp-for="Apartmentblockno"></label>
        <input class="form-control" asp-for="Apartmentblockno" />
    </div>
    <div class="form-group mt-2">
        <label asp-for="Sex" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input type="radio" asp-for="Sex" value="M" /> Male
            <input type="radio" asp-for="Sex" value="F" /> Female
        </div>
    </div>
    <div class="form-group mt-2">
        <label class="form-label" asp-for="Salary"></label>
        <input class="form-control" asp-for="Salary" />
    </div>
    <div class="form-group mt-2">
        <label class="form-label" asp-for="Shift"></label>
        <input class="form-control" asp-for="Shift" />
    </div>
    <div class="form-group mt-2 mb-2">
        <label class="form-label" asp-for="Depid"></label>
        <input class="form-control" asp-for="Depid" />
    </div>
    <input type="submit" value="Save" class="btn btn-primary" />|
    <a asp-action="Index" class="btn btn-info">Back to list</a>
</form>
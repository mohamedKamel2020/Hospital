@model Ward

@{
    ViewData["Title"] = "Details";
}



<section class="section-padding" id="about">
    <div class="container">
        <div class="row">

             <div class="col-lg-6 col-md-6 col-12">
                 <h2 class="text-center">Ward # @Model.Wardid </h2>
                 <h4 class="mb-lg-3 mb-3">@Model.DepatmentnoNavigation.Departmentname</h4>
                 <p>Number of Capacity = @Model.Capacity </p>
                 <p>Availability = @Model.Availability</p>
             </div>

            <div class="col-lg-4 col-md-5 col-12 mx-auto">
                <div class="d-flex justify-content-center align-items-center">
                    @if (!string.IsNullOrEmpty(Model.DepatmentnoNavigation.fileicon))
                    {
                        <img src="~/images/departments/@Model.DepatmentnoNavigation.fileicon" alt="Department Image" style="max-width:200px;" />
                    }
                </div>
            </div>

        </div>
    </div>
</section>

@if (Model.Patients.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
               <th>Patient Name</th>
               <th>Phone</th>
               <th>Age</th>
               <th>Department Name</th>
               <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patient in Model.Patients)
            {
                <tr>
                    <td>@patient.Patientname</td>
                    <td>@patient.Phone</td>
                    <td>@patient.Age</td>
                    <td>@patient.Ward.DepatmentnoNavigation.Departmentname</td>
                    <td>
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@patient.Patientid" class="btn btn-warning">
                            <i class="fas fa-eye"></i>Details
                        </a>
                    </td>
                   
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is no Patients</h3>
    </div>
}


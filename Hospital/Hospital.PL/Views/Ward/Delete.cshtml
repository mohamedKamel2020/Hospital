@model Ward

@{
    ViewData["Title"] = "Delete";
}


<section class="py-3">
    <section class="py-3">
        <div class="container">
            <div class="row">
                <div class="col-12 py-3">
                    <h2 class="text-center">Delete Ward # @Model.Wardid</h2>
                </div>
            </div>
        </div>
    </section>
</section>

<form asp-action="Delete" asp-route-id="@Model.Wardid" method="post" enctype="multipart/form-data">
    <div class="form mt-2">

        <div class="form-group mt-2">
            <label asp-for="Wardid" class="control-label col-md-2">Ward Number</label>
            <div class="col-md-12">
                <input asp-for="Wardid" class="form-control" readonly/>
            </div>
        </div>

        <div class="form-group mt-2">
            <label asp-for="Capacity" class="control-label col-md-2"></label>
            <div class="col-md-12">
                <input asp-for="Capacity" class="form-control" readonly/>
            </div>
        </div>
        <div class="form-group mt-2">
            <div class="col-md-offset-3 col-md-12">
                <input type="submit" value="Delete" class="btn btn-danger" />|
                <a asp-action="Index" class="btn btn-dark">Back to List</a>
            </div>
        </div>
    </div>
</form>

